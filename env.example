# Zerodha Kite Connect API Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Get from https://kite.trade/apps/)
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# Redirect URL (must match the one registered in your Kite app)
KITE_REDIRECT_URL=http://localhost:3000/callback

# ⚠️ FULL AUTOMATION CREDENTIALS (SECURITY RISK - USE WITH CAUTION) ⚠️
# These credentials enable complete automation including login process
# Only fill these if you want ZERO manual intervention

# Zerodha Login Credentials
ZERODHA_USERNAME=your_zerodha_user_id
ZERODHA_PASSWORD=your_zerodha_password
ZERODHA_PIN=your_trading_pin

# 2FA/TOTP Configuration
# Get TOTP secret from Zerodha 2FA setup (the secret key used in authenticator apps)
ZERODHA_TOTP_SECRET=your_totp_secret_key

# Browser Automation Settings
HEADLESS_BROWSER=false  # Set to true for headless mode (no browser window)
BROWSER_TIMEOUT=30      # Timeout in seconds for browser operations
AUTO_LOGIN_ENABLED=true # Set to false to disable full automation

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/zerodha_dashboard.log

# Optional: Database configuration for future use
# DB_URL=sqlite:///data/trading.db
